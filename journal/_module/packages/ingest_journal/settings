#!/usr/bin/env bash

# START CONFIGURATION
export VCW_STACK_GLOBAL_PACKAGE_CONTECO="vcwc/elastic/journalbeat"
export VCW_STACK_GLOBAL_PACKAGE_TAG="7.9.2"
export VCW_STACK_GLOBAL_STACKNAMES="ingest_journal"
export VCW_STACK_GLOBAL_BOOTSTACKS=""
export VCW_STACK_GLOBAL_RUNSTACKS="ingest_journal"
export VCW_STACK_GLOBAL_VOLUME_LIST="${VCW_STACK_GLOBAL_STACKPREFIX}_journalbeat_config,${VCW_STACK_GLOBAL_STACKPREFIX}_journalbeat_volume"
export VCW_STACK_GLOBAL_VOLUME_INITIALISED="${VCW_STACK_GLOBAL_STACKPREFIX}_journalbeat_config:/vcw/pwd"
# END CONFIGURATION

# START MODULE SETTINGS
export INGEST_JOURNAL_ENVIRONMENT_SEEK="tail"
export INGEST_JOURNAL_ENVIRONMENT_INCLUDE_MATCHES=
export INGEST_JOURNAL_ENVIRONMENT_OUTPUT_CONSOLE="false"
export INGEST_JOURNAL_ENVIRONMENT_OUTPUT_KAFKA="true"
export INGEST_JOURNAL_ENVIRONMENT_OUTPUT_CONFIG_KAFKA_HOSTS="kafka:9092"
export INGEST_JOURNAL_ENVIRONMENT_OUTPUT_CONFIG_KAFKA_TOPIC="swarm_journal_raw"
export INGEST_JOURNAL_ENVIRONMENT_LOGGING_LEVEL="warning"
# END MODULE SETTINGS

# START VOLUMES SETTINGS
export INGEST_JOURNAL_VOLUMES_HOST_JOURNALPATH="${INGEST_JOURNAL_MODULE_HOST_JOURNALPATH}"
# END VOLUMES SETTINGS
