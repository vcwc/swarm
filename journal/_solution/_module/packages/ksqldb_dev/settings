#!/usr/bin/env bash

# START CONFIGURATION
export VCW_STACK_GLOBAL_PACKAGE_CONTECO="vcwc/confluent_ksqldb"
export VCW_STACK_GLOBAL_PACKAGE_TAG="0.12.0"
export VCW_STACK_GLOBAL_STACKNAMES="ksqldb_dev"
export VCW_STACK_GLOBAL_BOOTSTACKS="ksqldb_dev"
export VCW_STACK_GLOBAL_RUNSTACKS=""
export VCW_STACK_GLOBAL_VOLUME_LIST="${VCW_STACK_GLOBAL_STACKPREFIX}_ksqldb_queries_volume"
export VCW_STACK_GLOBAL_VOLUME_INITIALISED="${VCW_STACK_GLOBAL_STACKPREFIX}_ksqldb_queries_volume:/vcw/pwd"
# END CONFIGURATION

# START MODULE SETTINGS
export KSQLDB_DEV_MODULE_BOOTSTRAP_SERVERS="kafka:9092"
export KSQLDB_DEV_MODULE_KSQL_SERVICE_ID="${VCW_STACK_GLOBAL_STACKPREFIX}"
export KSQLDB_DEV_MODE=",'KSQL_LISTENERS=http://0.0.0.0:8088','KSQL_KSQL_SCHEMA_REGISTRY_URL=http://schema_registry:8081'"
export KSQLDB_DEV_CONSOLE=",'KSQL_LISTENERS=http://0.0.0.0:8088','KSQL_KSQL_SCHEMA_REGISTRY_URL=http://schema_registry:8081'"
export KSQLDB_DEV_HEADLESS=",'KSQL_KSQL_QUERIES_FILE=','KSQL_KSQL_SCHEMA_REGISTRY_URL=http://schema_registry:8081'"
export KSQLDB_DEV_MODULE_KSQLDB_PORT="8088"
# END MODULE SETTINGS

# START VOLUMES SETTINGS
# END VOLUMES SETTINGS

# START PORTS SETTINGS
export KSQLDB_DEV_PORTS="${KSQLDB_DEV_MODULE_KSQLDB_PORT}:8088"
# END PORTS SETTINGS

# START NETWORKS SETTINGS
# END NETWORKS SETTINGS

# START DEPLOY SETTINGS
export KSQLDB_DEV_DEPLOY_RESOURCES_LIMITS_MEMORY="1536m"
export KSQLDB_DEV_DEPLOY_RESOURCES_RESERVATIONS_MEMORY="1024m"
# END DEPLOY SETTINGS


