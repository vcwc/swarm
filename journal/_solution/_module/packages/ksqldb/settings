#!/usr/bin/env bash

# START CONFIGURATION
export VCW_STACK_GLOBAL_PACKAGE_CONTECO="vcwc/confluent_ksqldb"
export VCW_STACK_GLOBAL_PACKAGE_TAG="0.12.0"
export VCW_STACK_GLOBAL_STACKNAMES="ksqldb"
export VCW_STACK_GLOBAL_BOOTSTACKS="ksqldb"
export VCW_STACK_GLOBAL_RUNSTACKS=""
export VCW_STACK_GLOBAL_VOLUME_LIST="${VCW_STACK_GLOBAL_STACKPREFIX}_ksqldb_queries_volume"
export VCW_STACK_GLOBAL_VOLUME_INITIALISED="${VCW_STACK_GLOBAL_STACKPREFIX}_ksqldb_queries_volume:/vcw/pwd"
# END CONFIGURATION

# START MODULE SETTINGS
export KSQLDB_MODULE_BOOTSTRAP_SERVERS="kafka:9092"
export KSQLDB_MODULE_KSQL_SERVICE_ID="${VCW_STACK_GLOBAL_STACKPREFIX}"
export KSQLDB_MODE=",'KSQL_KSQL_QUERIES_FILE=/vcw/pwd/queries.sql','KSQL_KSQL_SCHEMA_REGISTRY_URL=http://schema_registry:8081'"
export KSQLDB_MODULE_KSQLDB_PORT="8088"
# END MODULE SETTINGS

# START VOLUMES SETTINGS
# END VOLUMES SETTINGS

# START PORTS SETTINGS
export KSQLDB_PORTS="${KSQLDB_MODULE_KSQLDB_PORT}:8088"
# END PORTS SETTINGS

# START NETWORKS SETTINGS
# END NETWORKS SETTINGS

# START DEPLOY SETTINGS
export KSQLDB_DEPLOY_RESOURCES_LIMITS_MEMORY="${INGEST_JOURNAL_MODULE_KSQLDB_MEMORY_LIMIT}"
export KSQLDB_DEPLOY_RESOURCES_RESERVATIONS_MEMORY="${INGEST_JOURNAL_MODULE_KSQLDB_MEMORY_RESERVED}"
# END DEPLOY SETTINGS
